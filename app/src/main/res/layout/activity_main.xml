<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:keepScreenOn="true"
    tools:context="com.unmannedairlines.dronepan.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="75px"
            android:background="#000000"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Alt: -"
                android:id="@+id/altitudeTextView"
                android:textColor="#ffffff"
                android:paddingStart="10dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="|"
                android:id="@+id/divider1"
                android:textColor="#ffffff"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Batt: -"
                android:id="@+id/batteryTextView"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="|"
                android:id="@+id/divider2"
                android:textColor="#ffffff"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sats: -"
                android:id="@+id/satelliteTextView"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="|"
                android:id="@+id/divider3"
                android:textColor="#ffffff"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mode: -"
                android:id="@+id/flightModeTextView"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Disconnected"
                android:id="@+id/connectionStatus"
                android:textColor="#ffffff"
                android:gravity="center_vertical|right"
                android:paddingEnd="10dp" />


        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:progressTint="#17a9de"
            android:progress="0" />

        <TextureView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/cameraView"
            android:paddingBottom="100px"
            android:layout_weight="1"
            android:layout_gravity="left|bottom" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:id="@+id/panoButton"
            android:layout_gravity="bottom|center_horizontal" />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Columns: 6 at 60 degrees"
        android:id="@+id/columnsButton"
        android:layout_gravity="left|bottom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitches: 0, -30, -60, -90"
        android:id="@+id/pitchesButton"
        android:layout_gravity="right|bottom" />

</FrameLayout>
